{
  "name": "gaps",
  "addons":[
    "mongolab"
  ],
  "env":{
    "ORG_DOMAIN": {
      "required": true
    },
    "ORG_NAME": {
      "required": true
    },
    "OAUTH_CLIENT_ID": {
      "required": true
    },
    "OAUTH_CLIENT_SECRET": {
      "required": true
    },
    "OAUTH_REDIRECT_URL": {
      "required": true
    },
    "SESSION_SECRET": {
      "required": true,
      "description": "A secret key for sessions.",
      "generator": "secret"
    },
    "DB_ENCRYPTION_KEY": {
      "required": false,
      "description": "Secret key to encrypt your OAuth credentials at rest",
      "generator": "secret"
    }
  }
}
